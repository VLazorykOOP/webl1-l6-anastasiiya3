    <script>
        // Невеликий скрипт для демонстрації роботи 'for' в <output>
        const notes = document.getElementById('notes');
        const output = document.querySelector('output[for="notes"]');
        
        if (notes && output) {
            notes.addEventListener('input', () => {
                output.value = notes.value.length;
            });
            // Ініціалізація початкового значення
            output.value = notes.value.length;
        }
    </script>

